# Correlate Environment Configuration
# Copy this file to .env and customize as needed

# Path to the templates directory (default: "templates")
# Can be an absolute path or relative to the current working directory
CORRELATE_TEMPLATES_PATH=templates

# Path for project-specific template storage (default: ".correlate")
CORRELATE_PROJECT_TEMPLATES_PATH=.correlate

# Path to the correlate working directory (default: ".correlate")
CORRELATE_PATH=.correlate

# URL to the remote template repository (optional, leave empty to use local templates only)
# Example: https://raw.githubusercontent.com/yourorg/correlate-templates/main
CORRELATE_TEMPLATE_REPOSITORY_URL=
